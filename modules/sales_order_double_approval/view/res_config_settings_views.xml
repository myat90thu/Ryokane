<odoo>
  <record id="salesorder_res_config_view" model="ir.ui.view">
	 <field name="name">sales.res.config.view</field>
	 <field name="model">res.config.settings</field>
	 <field name="inherit_id" ref="account.res_config_settings_view_form"/>
	 <field name="arch" type="xml">
        <xpath expr="//div[@data-key='account']//h2[2]" position="before">
            <h2>Sales Order Double Approval</h2>
            <div class="row mt16 o_settings_container">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="double_verification"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="double_verification"/>
                        <div class="text-muted">
                            Managers must approve Invoices
                        </div>
                        <div class="content-group" attrs="{'invisible': [('double_verification', '=', False)]}">
                            <div class="row mt16">
                                <label for="customer_salesorder" class="col-lg-4 o_light_label"/>
                                <field name="customer_salesorder"/>
                            </div>
                            <div class="row mt16">
                                <label for="supplier_salesorder" class="col-lg-4 o_light_label"/>
                                <field name="supplier_salesorder"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
	</field>
 </record>
</odoo>