<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="res_config_settings_product_visibility_view"
		model="ir.ui.view">
		<field name="name">res.config.settings.product.visibility</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id"
			ref="website_sale.res_config_settings_view_form" />
		<field name="arch" type="xml">
			<div id="product_availability_setting" position="after">
				<div class="col-12 col-lg-6 o_setting_box" id="product_visibility">
					<div class="o_setting_left_pane">
						<field name="visible_public_prod_categ_too" />
					</div>
					<div class="o_setting_right_pane">
						<label for="visible_public_prod_categ_too" />
						<div class="text-muted">
							On Webshop Visible Registered User Product Plus All
							Public Product
						</div>
					</div>
				</div>
			</div>
		</field>
	</record>

</odoo>
