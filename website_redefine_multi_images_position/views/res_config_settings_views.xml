<?xml version="1.0" encoding="UTF-8"?>
<odoo>
     <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.shift.image</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='sale_product_catalog_settings']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="product_multi_image_setting">
                    <div class="o_setting_right_pane">
                        <label string="Multi-Images Position" for="multi_image_tab_position_settings"/>
                         <div class="text-muted">
                            Set Multi-Image carousel Position
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="multi_image_tab_position_settings" class="o_light_label" widget="radio"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
