<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="sale_target_view" model="ir.ui.view">
            <field name="name">sale.target.view</field>
            <field name="model">sale.target</field>
            <field name="arch" type="xml">
            <form>
            <field name="salesperson_id"/>
            <field name="sales_target_type"/>
            <field name="date_From"/>
            <field name="date_to"/>
            <field name="sales_target"/>
            <field name="sales_target_process"/>
            </form>
            </field>
        </record>


        <record id="action_salestarget" model="ir.actions.act_window">
            <field name="name">Sales Target</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.target</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="sale_target_view"/>
            <field name="view_mode">form</field>
        </record>
        <menuitem id="sales_target"
            name="Sales target"
            parent="sale.sale_menu_root"
            sequence="3"/>
        <menuitem id="sale_target"
            name="Sales Team"
            parent="sales_target"
            sequence="2"/>
        <menuitem id="sale_target_users"
            name="Salesperson"
            action="action_salestarget"
            parent="sales_target"
            sequence="1"/>
</odoo>